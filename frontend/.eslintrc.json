{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended",
        "plugin:css/recommended",
        "plugin:css-modules/recommended"
    ],
    "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaVersion": "latest",
        "sourceType": "module",
        "extraFileExtensions": [".module.css"]
    },
    "plugins": [
        "react",
        "css",
        "json",
        "css-modules"
    ],
    "rules": {
        "semi": ["error", "always"],
        "@typescript-eslint/semi": "off"
    }
}
